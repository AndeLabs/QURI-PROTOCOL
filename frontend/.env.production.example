# ===========================================
# QURI Protocol - Production Environment
# ===========================================

# ICP Canister IDs (Replace with your actual canister IDs)
NEXT_PUBLIC_RUNE_ENGINE_CANISTER_ID=xxxxx-xxxxx-xxxxx-xxxxx-cai
NEXT_PUBLIC_REGISTRY_CANISTER_ID=xxxxx-xxxxx-xxxxx-xxxxx-cai
NEXT_PUBLIC_BITCOIN_INTEGRATION_CANISTER_ID=xxxxx-xxxxx-xxxxx-xxxxx-cai
NEXT_PUBLIC_IDENTITY_MANAGER_CANISTER_ID=xxxxx-xxxxx-xxxxx-xxxxx-cai

# ===========================================
# Network Configuration
# ===========================================

# ICP Network ('ic' for mainnet, 'local' for development)
NEXT_PUBLIC_IC_NETWORK=ic

# Internet Identity Canister
NEXT_PUBLIC_INTERNET_IDENTITY_CANISTER_ID=rdmx6-jaaaa-aaaaa-aaadq-cai

# ICP Host (mainnet)
NEXT_PUBLIC_IC_HOST=https://ic0.app

# ===========================================
# Security & CORS
# ===========================================

# Allowed CORS origin (your domain)
NEXT_PUBLIC_ALLOWED_ORIGIN=https://quri.protocol

# Rate limiting (requests per minute)
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ===========================================
# Monitoring & Logging (Optional)
# ===========================================

# Sentry (Error Tracking)
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
# NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# DataDog (Logging & APM)
# DD_API_KEY=xxxxx
# DD_APP_KEY=xxxxx
# DD_SITE=datadoghq.com

# LogRocket (Session Replay)
# NEXT_PUBLIC_LOGROCKET_ID=xxxxx/quri-protocol

# ===========================================
# Bitcoin Configuration
# ===========================================

# Bitcoin Network ('mainnet' or 'testnet')
NEXT_PUBLIC_BITCOIN_NETWORK=mainnet

# Bitcoin Explorer
NEXT_PUBLIC_BTC_EXPLORER=https://mempool.space

# ===========================================
# Application Settings
# ===========================================

# Application URL
NEXT_PUBLIC_APP_URL=https://quri.protocol

# Support Email
NEXT_PUBLIC_SUPPORT_EMAIL=support@quri.protocol

# Analytics (Optional)
# NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Feature Flags
NEXT_PUBLIC_ENABLE_DASHBOARD=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# ===========================================
# Build Configuration
# ===========================================

# Node environment
NODE_ENV=production

# Build optimizations
NEXT_TELEMETRY_DISABLED=1
ANALYZE=false
