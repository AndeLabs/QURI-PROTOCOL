{
  "version": 1,
  "canisters": {
    "rune-engine": {
      "type": "rust",
      "package": "rune-engine",
      "candid": "canisters/rune-engine/rune_engine.did",
      "build": ["cargo build --target wasm32-unknown-unknown --release --package rune-engine"],
      "wasm": "target/wasm32-unknown-unknown/release/rune_engine.wasm"
    },
    "bitcoin-integration": {
      "type": "rust",
      "package": "bitcoin-integration",
      "candid": "canisters/bitcoin-integration/bitcoin_integration.did",
      "build": ["cargo build --target wasm32-unknown-unknown --release --package bitcoin-integration"],
      "wasm": "target/wasm32-unknown-unknown/release/bitcoin_integration.wasm"
    },
    "registry": {
      "type": "rust",
      "package": "registry",
      "candid": "canisters/registry/registry.did",
      "build": ["cargo build --target wasm32-unknown-unknown --release --package registry"],
      "wasm": "target/wasm32-unknown-unknown/release/registry.wasm"
    },
    "identity-manager": {
      "type": "rust",
      "package": "identity-manager",
      "candid": "canisters/identity-manager/identity_manager.did",
      "build": ["cargo build --target wasm32-unknown-unknown --release --package identity-manager"],
      "wasm": "target/wasm32-unknown-unknown/release/identity_manager.wasm"
    }
  },
  "defaults": {
    "build": {
      "packtool": ""
    },
    "replica": {
      "subnet_type": "system"
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:8000",
      "type": "ephemeral"
    },
    "ic": {
      "providers": ["https://ic0.app"],
      "type": "persistent"
    }
  }
}
